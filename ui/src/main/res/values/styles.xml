<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/FullScreenDialog.Window</item>
    </style>

    <style name="FullScreenDialog.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>
</resources>